    "@codemirror/view": "^6.39.9",
    "@lezer/highlight": "^1.2.3",
    "@lezer/lr": "^1.4.7",
    "clsx": "^2.1.1",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^4.3.3",
    "react-router-dom": "^6.30.3",
    "reactflow": "^11.11.4",
