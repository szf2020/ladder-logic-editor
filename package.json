  "type": "module",
  "homepage": "https://lle.dilger.dev/",
  "scripts": {
    "dev": "vite",
    "build": "npm run build:parser && tsc -b && vite build",
    "build:parser": "node src/lang/build-parser.mjs",
    "lint": "eslint .",
    "preview": "vite preview",
